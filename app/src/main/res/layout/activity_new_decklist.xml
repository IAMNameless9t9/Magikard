<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="@dimen/activity_vertical_margin">

    <TextView
        android:id="@+id/newDeckHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_horizontal_margin"
        android:gravity="center"
        android:text="@string/newDeckHeader"
        android:textSize="@dimen/header_height"
        android:layout_weight="2"
        />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="20">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/activity_vertical_margin"
            android:orientation="vertical">

            <EditText
                android:id="@+id/newDeckListName"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/newDeckName"
                android:textSize="@dimen/editTextHeight"/>

            <EditText
                android:id="@+id/newDeckListFormat"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:hint="@string/newDeckListFormat"
                android:textSize="@dimen/editTextHeight" />

        </LinearLayout>
    </ScrollView>

    <Button
        android:id="@+id/newDeckListSubmitButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/activity_vertical_margin"
        android:text="@string/newDeckListSubmitButton"
        android:textSize="@dimen/button_height"
        android:layout_gravity="center"
        android:layout_weight="1" />
</LinearLayout>